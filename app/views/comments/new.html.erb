<div class="topic-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="topic-index-single">
          <h2 class="topic-author">
            <%= @topic.user.name %>
          </h2>
          <%= image_tag @topic.image.url %>
          <p class="topic-text">
            <%= @topic.description %>
          </p>
          <p class="topic-comment">コメント</p>
          <% @topic.comments.each do |comment| %>
            <div class="topic-comment-content">
              <%= comment.comment_content %><br>
            </div>
          <% end %>
        </div>
        <div class="comment-form">
          <%= form_for @comment do |f| %>
            <div class="form-group">
              <%= f.label :comment_content, class: 'text-black' %>
              <%= f.text_field :comment_content, :placeholder => "コメントを入力" , class: 'form-control' %>
            </div>
            <%= f.hidden_field :topic_id, value: @topic.id %>
            <%= f.submit "コメントを追加", class: 'btn-block btn-black' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
